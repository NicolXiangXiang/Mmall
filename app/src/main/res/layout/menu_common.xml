<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:background="@drawable/p_bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:divider="@drawable/horizontal_divider_gray"
        android:showDividers="middle"
        android:paddingLeft="15dp" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/ll_gohome"
            android:background="@drawable/universal_item_bg"
            android:showDividers="beginning|middle|end"
            android:clickable="true"
            android:layout_marginLeft="-15dp"
            android:paddingLeft="15dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView19"
                android:layout_marginRight="15dp"
                android:src="@drawable/i_01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/string_common_back_home"
                android:id="@+id/textView27"
                android:layout_weight="1"
                android:textColor="#ff606060"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/ll_langulage_select"
            android:layout_weight="1"
            android:layout_marginLeft="-15dp"
            android:background="@drawable/universal_item_bg"
            android:clickable="true"
            android:paddingLeft="15dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView20"
                android:layout_marginRight="15dp"
                android:src="@drawable/i_02" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/string_common_language_slect"
                android:id="@+id/textView28"
                android:layout_weight="1"
                android:textColor="#ff606060"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/ll_currency_select"
            android:layout_weight="1"
            android:layout_marginLeft="-15dp"
            android:background="@drawable/universal_item_bg"
            android:clickable="true"
            android:paddingLeft="15dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView21"
                android:layout_marginRight="15dp"
                android:src="@drawable/i_03" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/string_common_currency_select"
                android:id="@+id/textView30"
                android:layout_weight="1"
                android:textColor="#ff606060"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
