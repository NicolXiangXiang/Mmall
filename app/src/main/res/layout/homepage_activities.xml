<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/border_top_bottom"
    android:divider="@drawable/vertical_divider_gray"
    android:showDividers="middle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="猜你喜欢"
            android:id="@+id/txt_s1_title"
            android:textColor="@color/standBlack"
            android:textIsSelectable="false"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扮靓新风尚！"
            android:id="@+id/txt_s1_subtitle"
            android:layout_below="@+id/txt_s1_title"
            android:textSize="10sp"
            android:textColor="@color/standGray" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/iv_s1"
            android:layout_below="@+id/txt_s1_subtitle"
            android:src="@drawable/product_1"
            android:adjustViewBounds="true"
            android:layout_alignParentLeft="true"
            android:scaleType="fitStart" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="限时打折"
            android:id="@+id/txt_s2_title"
            android:textColor="@color/standBlack"
            android:textIsSelectable="false"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="过年不打烊！"
            android:id="@+id/txt_s2_subtitle"
            android:layout_below="@+id/txt_s2_title"
            android:textSize="10sp"
            android:textColor="@color/standGray" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/iv_s2"
            android:layout_below="@+id/txt_s2_subtitle"
            android:src="@drawable/product_2"
            android:adjustViewBounds="true"
            android:layout_alignParentLeft="true"
            android:scaleType="fitStart" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐品牌"
            android:id="@+id/txt_s3_title"
            android:textColor="@color/standBlack"
            android:textIsSelectable="false"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时常优雅，引领生活"
            android:id="@+id/txt_s3_subtitle"
            android:layout_below="@+id/txt_s3_title"
            android:textSize="10sp"
            android:textColor="@color/standGray" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/iv_s3"
            android:layout_below="@+id/txt_s3_subtitle"
            android:src="@drawable/product_3"
            android:adjustViewBounds="true"
            android:layout_alignParentLeft="true"
            android:scaleType="fitStart" />
    </RelativeLayout>
</LinearLayout>
