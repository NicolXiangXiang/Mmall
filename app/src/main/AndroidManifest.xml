<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mmall.com.mmall" >

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MmallApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SettingActivity"
            android:label="@string/title_activity_setting"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
        </activity>
        <activity
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:name=".activity.FavoriteProductActivity" >
        </activity>
        <activity
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:name=".activity.FavoriteStoreActivity" >
        </activity>
        <activity
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:name=".activity.MyStoreActivity" >
        </activity>
        <activity
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:name=".activity.ReceiptAddressActivity">
        </activity>
        <activity
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:name=".activity.ProfileActivity">
        </activity>
        <activity
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:name=".activity.ChangePasswordActivity">
        </activity>
        <activity
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:name=".activity.LoginActivity">
        </activity>
        <activity
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:name=".activity.RegistrationActivity">
        </activity>
        <activity
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:name=".activity.ProductListActivity">
        </activity>
        <activity
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:name=".activity.ProductDetailActivity">
        </activity>
    </application>

</manifest>
